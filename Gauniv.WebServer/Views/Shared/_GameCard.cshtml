@model Gauniv.WebServer.Dtos.GameFullDto

<div class="card h-100 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/300x400?text=No+Image" : Model.ImageUrl)" class="card-img-top h-auto" alt="@Model.Name" style="object-fit: cover;">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate" title="@Model.Name">@Model.Name</h5>
        <div class="mt-auto d-flex justify-content-between align-items-center">
            <span class="fw-bold fs-1">@Model.Price.ToString("C")</span>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm stretched-link">View</a>
        </div>
    </div>
</div>

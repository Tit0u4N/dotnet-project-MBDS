@model Gauniv.WebServer.Dtos.GameCreateOrEditDto
@{
    ViewData["Title"] = "Edit Game";
}

<div class="container mt-4">
    <h1>Edit Game</h1>
    <hr />
    <form asp-action="UpdateGame" asp-route-id="@ViewBag.GameId" method="post" enctype="multipart/form-data">
        <partial name="GameForm" model="Model" />
        
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Details" asp-route-id="@ViewBag.GameId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

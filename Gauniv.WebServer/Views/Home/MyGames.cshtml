@model IEnumerable<Gauniv.WebServer.Dtos.GameFullDto>
@{
    ViewData["Title"] = "My Games";
    int offset = ViewBag.Offset ?? 0;
    int limit = ViewBag.Limit ?? 20;
    int total = ViewBag.Total ?? 0;
    int currentPage = (offset / limit) + 1;
    int totalPages = (int)Math.Ceiling((double)total / limit);
    var selectedCategories = ViewBag.SelectedCategories as int[] ?? Array.Empty<int>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Games</h1>
        <a asp-action="Shop" class="btn btn-outline-primary">Return to Shop</a>
    </div>

    <!-- Reusing filter for my games as requested: 'all filters from GameService except owned' -->
    <partial name="_GameFilter" />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You don't own any games yet. <a asp-action="Shop">Visit the Shop</a>.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var game in Model)
            {
                <div class="col">
                    <partial name="_GameCard" model="game" />
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav class="mt-4" aria-label="Game navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(offset == 0 ? "disabled" : "")">
                        <a class="page-link" href="#" onclick="navigateWithCategories(@(Math.Max(0, offset - limit)), @limit); return false;">Previous</a>
                    </li>
                    <li class="page-item disabled"><span class="page-link">Page @currentPage of @totalPages</span></li>
                    <li class="page-item @(offset + limit >= total ? "disabled" : "")">
                        <a class="page-link" href="#" onclick="navigateWithCategories(@(offset + limit), @limit); return false;">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<script>
    function navigateWithCategories(newOffset, limit) {
        const params = new URLSearchParams();
        params.set('offset', newOffset);
        params.set('limit', limit);
        
        const name = '@(ViewBag.Name ?? "")';
        if (name) params.set('name', name);
        
        const minPrice = '@(ViewBag.MinPrice?.ToString() ?? "")';
        if (minPrice) params.set('minPrice', minPrice);
        
        const maxPrice = '@(ViewBag.MaxPrice?.ToString() ?? "")';
        if (maxPrice) params.set('maxPrice', maxPrice);
        
        @foreach (var catId in selectedCategories)
        {
            <text>params.append('category', '@catId');</text>
        }
        
        window.location.href = '@Url.Action("MyGames")?' + params.toString();
    }
</script>


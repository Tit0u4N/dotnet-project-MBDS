@model IEnumerable<Gauniv.WebServer.Dtos.GameFullDto>
@{
    ViewData["Title"] = "Shop";
    int offset = ViewBag.Offset ?? 0;
    int limit = ViewBag.Limit ?? 20;
    int total = ViewBag.Total ?? 0;
    int currentPage = (offset / limit) + 1;
    int totalPages = (int)Math.Ceiling((double)total / limit);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Shop</h1>
        <a asp-action="MyGames" class="btn btn-outline-success">View My Library</a>
    </div>

    <partial name="_GameFilter" />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No games found matching your criteria.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var game in Model)
            {
                <div class="col">
                    <partial name="_GameCard" model="game" />
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav class="mt-4" aria-label="Game navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(offset == 0 ? "disabled" : "")">
                        <a class="page-link" asp-action="Shop" 
                           asp-route-offset="@(Math.Max(0, offset - limit))" 
                           asp-route-limit="@limit"
                           asp-route-name="@ViewBag.Name"
                           asp-route-minPrice="@ViewBag.MinPrice"
                           asp-route-maxPrice="@ViewBag.MaxPrice">Previous</a>
                    </li>
                    <li class="page-item disabled"><span class="page-link">Page @currentPage of @totalPages</span></li>
                    <li class="page-item @(offset + limit >= total ? "disabled" : "")">
                        <a class="page-link" asp-action="Shop" 
                           asp-route-offset="@(offset + limit)" 
                           asp-route-limit="@limit"
                           asp-route-name="@ViewBag.Name"
                           asp-route-minPrice="@ViewBag.MinPrice"
                           asp-route-maxPrice="@ViewBag.MaxPrice">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@using Gauniv.WebServer.Websocket
@model IEnumerable<OnlinePlayerDto>
@{
    ViewData["Title"] = "Players Online";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üéÆ Players Online</h1>
        <div>
            <span class="badge bg-success fs-6">
                <span class="online-pulse me-1"></span>
                <span id="player-count">@Model.Count()</span> players online
            </span>
        </div>
    </div>

    <div class="d-flex align-items-center gap-3 mb-4">
        <span id="connection-status" class="connection-status connected">
            <span class="status-icon">‚óè</span> Connected
        </span>
        <small class="text-muted">‚Ä¢ Updates in real-time</small>
    </div>

    <div id="players-container" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No players online at the moment.
                </div>
            </div>
        }
        else
        {
            @foreach (var player in Model)
            {
                var connectedDuration = DateTime.UtcNow - player.ConnectedAt;
                var timeAgo = connectedDuration.TotalHours >= 1 
                    ? $"{(int)connectedDuration.TotalHours}h {connectedDuration.Minutes}m"
                    : connectedDuration.TotalMinutes >= 1 
                        ? $"{(int)connectedDuration.TotalMinutes} min"
                        : "Just now";
                
                <div class="col">
                    <div class="card player-card h-100">
                        <div class="card-body d-flex align-items-center gap-3">
                            <div class="player-avatar position-relative">
                                <div class="avatar-circle">@player.UserName[0].ToString().ToUpper()</div>
                                <span class="online-dot"></span>
                            </div>
                            <div class="player-info flex-grow-1">
                                <h6 class="card-title mb-1 text-truncate">@player.UserName</h6>
                                <small class="text-muted">
                                    <span class="text-success">‚óè</span> Online for @timeAgo
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

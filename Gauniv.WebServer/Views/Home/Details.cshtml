@model Gauniv.WebServer.Dtos.GameFullDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <!-- Back Button -->
    <div class="mb-3">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            &larr; Back
        </a>
    </div>

    <div class="row">
        <!-- Left Column: Large Image -->
        <div class="col-md-5 mb-4">
            <img
                src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/600x800?text=No+Image" : Model.ImageUrl)"
                class="img-fluid rounded shadow"
                alt="@Model.Name"
                style="width: 100%; object-fit: cover;">
        </div>

        <!-- Right Column: Info -->
        <div class="col-md-7">
            <div class="d-flex justify-content-between align-items-center">
                <h1>@Model.Name</h1>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="EditGame" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
                }
            </div>
            <p class="text-muted">Released on @Model.ReleaseDate.ToShortDateString()</p>

            <div class="d-flex align-items-center mb-3">
                <span class="badge bg-warning text-black me-2">â˜… @(Model.Rating)/5</span>
                <span class="h3 mb-0 text-primary">@Model.Price.ToString("C")</span>
            </div>

            <hr>

            <h4>Description</h4>
            <p class="lead">
                @(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)
            </p>


            <div class="mt-4">
                <!-- Categories if available -->
                @if (Model.GameCategories != null && Model.GameCategories.Any())
                {
                    <div class="mb-3">
                        <strong>Categories:</strong>
                        @foreach (var cat in Model.GameCategories)
                        {
                            <span class="badge bg-secondary me-1">@cat.Title</span>
                        }
                    </div>
                }

                <hr/>

                <!-- Ownership / Buy Logic -->
                @if (ViewBag.IsOwned == true)
                {
                    <div class="alert alert-success mt-3">
                        <h4 class="alert-heading">You own this game!</h4>
                        <p class="mb-0">Purchased
                            on: @(ViewBag.PurchaseDate?.ToLocalTime().ToString("g") ?? "Unknown date")</p>
                    </div>
                }
                else
                {
                    <form asp-action="Buy" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm">
                            Buy Now for @Model.Price.ToString("C")
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

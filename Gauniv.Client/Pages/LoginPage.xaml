<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="Gauniv.Client.Pages.LoginPage"
             Title="Connexion"
             x:DataType="vm:LoginViewModel"
             BindingContext="{vm:LoginViewModel}"
             BackgroundColor="{StaticResource Background}">


    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center" MaximumWidthRequest="500">
        
        <Image Source="logo_vapeur_big.png" 
               HeightRequest="200" 
               HorizontalOptions="Center" />
        
        <Label Text="Welcome !" FontSize="32" HorizontalOptions="Center" />

        <Entry Placeholder="Username" 
               BackgroundColor="{StaticResource InputBackground}"
               Text="{Binding Username}" />

        <Entry Placeholder="Password" 
               IsPassword="True"
               BackgroundColor="{StaticResource InputBackground}"
               Text="{Binding Password}" />

        <Button Text="Login" 
                TextColor="{StaticResource TextLight}"
                BackgroundColor="{StaticResource InputBackground}"
                Command="{Binding LoginCommand}" />

    </VerticalStackLayout>
</ContentPage>